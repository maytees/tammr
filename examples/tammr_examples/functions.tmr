function greet(name) do
    return "Hello, ${name}!"
end

let str message = greet("Tammr")
println(message)

function add(a, b = 0) do
    return a + b
end

println(add(5, 3))  // Prints 8
println(add(5))     // Prints 5 (using default value)

// Anonymous function
let number multiply = (x, y) -> x * y
println(multiply(4, 3))  // Prints 12
